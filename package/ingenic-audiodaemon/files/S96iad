#!/bin/sh

. /usr/share/common

DAEMON_ARGS="-r -c /etc/iad.json"

start() {
	echo_title "Starting Ingenic Audio Daemon"

	start_daemon
}

stop() {
	echo_title "Stopping Ingenic Audio Daemon"

	stop_daemon
}

restart() {
	stop || true
	sleep 1
	reload
}

reload() {
	start
}

case "$1" in
	start | stop | restart | reload)
		$1
		;;
	*)
		die "Usage: $0 {start|stop|restart|reload}"
esac

exit 0
