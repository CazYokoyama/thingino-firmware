#!/bin/sh

. /etc/init.d/rc.common

config_file=/etc/webui/zerotier.conf
[ -f "$config_file" ] && . $config_file

case "$1" in
	start)
		[ "false" = "$zerotier_enabled" ] && die "Zerotier-One service is disabled in $config_file"

		starting
		{ modprobe tun && zerotier-one -d; } && echo "OK" || die "FAIL"
		;;
	stop)
		stopping
		{ kill -9 $(pidof zerotier-one) && rmmod -w tun; } && echo "OK" || die "FAIL"
		;;
	*)
		die "Usage: $0 {start|stop}"
		;;
esac
