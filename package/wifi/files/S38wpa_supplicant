#!/bin/sh

. /etc/init.d/rc.common

IFACE=wlan0
CONFIG="/etc/$DAEMON_SHORT.conf"
PIDFILE="/run/$DAEMON_SHORT.$IFACE.pid"

DAEMON_ARGS="-i $IFACE -c $CONFIG -P $PIDFILE -B"

ssid_changed() {
	current_ssid=$(grep '^ssid=' $CONFIG | cut -d= -f2- | tr -d '"')
	[ "$ssid" != "$current_ssid" ]
}

start() {
	starting
	ssid="$(fw_printenv -n wlanssid)"
	pass="$(fw_printenv -n wlanpass)"

	wlan_check || die "Disabled"

	if [ -z "$ssid" ] || [ -z "$pass" ]; then
		sed -i '/^auto wlan0$/s/^/#/' /etc/network/interfaces.d/wlan0
		quit "WiFi credentials missing"
	fi

	generate_wpa_supplicant_conf() {
		if [ ${#pass} -lt 64 ]; then
			wpa_passphrase "$ssid" "$pass" > $CONFIG
		else
			wpa_passphrase "$ssid" "dummy_password" > $CONFIG
			sed -i "s/psk=.*$/psk=$pass/" $CONFIG
		fi
		sed -i '/ssid/a \\tscan_ssid=1' $CONFIG

		if [ ${#pass} -lt 64 ]; then
			psk=$(grep '^\s*psk=' $CONFIG | cut -d= -f2 | tail -n 1)
			fw_setenv wlanpass "$psk"
		fi
	}

	if [ ! -f "$CONFIG" ] || [ ${#pass} -lt 64 ] || ssid_changed; then
		generate_wpa_supplicant_conf
	fi

	sed -i '/^#auto wlan0$/s/^#//' /etc/network/interfaces.d/wlan0

	start-stop-daemon -S -x $DAEMON_FULL -- $DAEMON_ARGS 2>&1 | logger -p daemon.info -t $0
	[ $? = 0 ] && echo "OK" || echo "FAIL"
}

stop() {
	stopping
	start-stop-daemon -K -q -p "$PIDFILE" -x $DAEMON_FULL
	[ $? = 0 ] && echo "OK" || echo "FAIL"
}

case "$1" in
	start | stop)
		$1
		;;
	reload | restart)
		stop
		start
		;;
	*)
		die "Usage: $0 {start|stop|restart|reload}"
		;;
esac

exit 0
