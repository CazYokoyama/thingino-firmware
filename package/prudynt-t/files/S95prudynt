#!/bin/sh

. /usr/share/common

COMMAND="/bin/env -- LD_PRELOAD=/lib/libimp_control.so $DAEMON_FULL"

start() {
	starting
	is_streamer_disabled && quit "Streamer disabled"
	start_daemon
}

stop() {
	stopping

	if is_streamer_disabled; then
		quit "Streamer disabled"
	fi

	[ -f "$SNAPSHOT_FILE" ] && rm -f "$SNAPSHOT_FILE"

	stop_daemon
}

case "$1" in
	start | stop)
		$1
		;;
	reload | restart)
		stop || true
		sleep 1
		start
		;;
	*)
		echo "Usage: $0 {start|stop|restart}"
		exit 1
		;;
esac

exit 0
