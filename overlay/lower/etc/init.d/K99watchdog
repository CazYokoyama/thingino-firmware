#!/bin/sh

. /etc/init.d/rc.common

WATCHDOG_TIMEOUT=60
DAEMON_ARGS="-T $WATCHDOG_TIMEOUT /dev/watchdog"

start() {
	starting
	[ "true" = "$(get disable_watchdog)" ] && quit "Disabled"
	start_daemon
}

stop() {
	stopping
	stop_daemon
}

case "$1" in
	start | stop)
		$1
		;;

	restart | reload)
		stop
		sleep 1
		start
		;;

	*)
		die "Usage: $0 {start|stop|restart|reload}"
		;;
esac

exit 0
