#!/bin/sh

. /etc/init.d/rc.common

DAEMON_ARGS="-f -c /etc/crontabs"

start() {
	printf 'Starting %s: ' $DAEMON
	[ -f /usr/sbin/$DAEMON ] || echo -en "Disabled, "
	start_daemon_with_pid
}

stop() {
	stopping
	[ -f /usr/sbin/$DAEMON ] || echo -en "Disabled, "
	stop_daemon_with_pid
}

case "$1" in
	start | stop)
		$1
		;;
	restart | reload)
		stop
		sleep 1
		start
		;;
	*)
		echo "Usage: $0 {start|stop|restart|reload}"
		exit 1
		;;
esac

exit 0
