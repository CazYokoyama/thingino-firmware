#!/bin/sh

. /etc/init.d/rc.common

start() {
	echo "Starting network..."

	ifup -v -a || die "Failed to bring up network"
}

stop() {
	echo "Stopping network..."

	ifdown -v -a || die "Failed to bring down network"
}

case "$1" in
	start)
		start
		;;
	stop)
		stop
		;;
	reload | restart)
		stop
		sleep 1
		start
		;;
	*)
		echo "Usage: $0 {start|stop|restart}"
		exit 1
		;;
esac

exit 0
