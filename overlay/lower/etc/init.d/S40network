#!/bin/sh

. /etc/init.d/rc.common

start() {
	starting
	run "ifup -v -a"
	check_result
}

stop() {
	stopping
	run "ifdown -v -a"
	check_result
}

case "$1" in
	start)
		start
		;;
	stop)
		stop
		;;
	reload | restart)
		stop
		sleep 1
		start
		;;
	*)
		echo "Usage: $0 {start|stop|restart}"
		exit 1
		;;
esac

exit 0
