#!/bin/sh

. /etc/init.d/rc.common

start() {
	echo "Check sysupgrade"

	[ "true" = "$sysupgrade_complete" ] && ok && quit

	fw_setenv sysupgrade_complete true
	# play_sound thingino.pcm
}

stop() {
	echo "Check sysupgrade"

	[ -f "/tmp/upgrade.me" ] && sysupgrade -p
}

case "$1" in
	start)
		start
		;;
	stop)
		stop
		;;
	*)
		echo "Usage: $0 {start|stop}"
		exit 1
		;;
esac

exit 0
